{
  "scripts": {
    "dev": "nodemon index.js",
    "dev:test": "cross-env  NODE_ENV=testing  nodemon index.js",
    "stripe": "stripe listen --forward-to localhost:9000/api/orders/webhook",
    "ts": "tsc",
    "ts:watch": "tsc --watch",
    "start": "node index.js",
    "e2e": "cross-env  NODE_ENV=testing  npx cypress open --e2e --browser=chrome",
    "test": "cross-env NODE_ENV=testing jest --runInBand",
    "test:verbose": "cross-env NODE_ENV=testing jest --verbose --runInBand",
    "test:watch": "cross-env NODE_ENV=testing jest --watchAll --runInBand",
    "migrate": "knex migrate:latest",
    "rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "reset-db": "npm run rollback && npm run migrate && npm run seed",
    
    "migrateh": "heroku run knex migrate:latest -a postgresql-project",
    "rollbackh": "heroku run knex migrate:rollback -a postgresql-project",
    "seedh": "heroku run knex seed:run -a postgresql-project",
    "reset-dbh": "npm run rollbackh && npm run migrateh && npm run seedh",
    "databaseh": "heroku pg:psql -a postgresql-project",

    "migrate-test": "NODE_ENV=testing   knex migrate:latest",
    "rollback-test": "NODE_ENV=testing  knex migrate:rollback",
    "seed-test": "NODE_ENV=testing      knex seed:run",
    "reset-db-test": "npm run rollback-test && npm run migrate-test && npm run seed-test",

    "deploy": "git add . && git commit -m 'deploy' && git push heroku main && git push"
  },
  "engines": {
    "node": "18.15.0",
    "npm": "9.5.0"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "2.8.5",
    "dotenv": "14.3.0",
    "ejs": "^3.1.9",
    "express": "4.17.2",
    "helmet": "5.0.2",
    "jsonwebtoken": "^8.5.1",
    "knex": "1.0.1",
    "knex-cleaner": "1.3.1",
    "morgan": "^1.10.0",
    "pg": "8.7.1",
    "stripe": "8.165.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "27.4.0",
    "@types/node": "^20.5.9",
    "cross-env": "7.0.3",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "cypress": "^13.1.0",
    "dayjs": "^1.11.10",
    "eslint": "8.7.0",
    "jest": "27.4.7",
    "nodemon": "2.0.15",
    "supertest": "6.2.2",
    "typescript": "^5.2.2"
  }
}
